import org.springframework.boot.SpringApplication;
import org.springframework.boot.autoconfigure.SpringBootApplication;
import org.springframework.context.annotation.Bean;
import org.springframework.web.servlet.config.annotation.EnableWebMvc;
import org.springframework.web.servlet.config.annotation.ResourceHandlerRegistry;
import org.springframework.web.servlet.config.annotation.WebMvcConfigurer;

@SpringBootApplication
@EnableWebMvc
public class Application implements WebMvcConfigurer {

    public static void main(String[] args) {
        SpringApplication.run(Application.class, args);
    }

    @Override
    public void addResourceHandlers(ResourceHandlerRegistry registry) {
        registry.addResourceHandler("/adf/**").addResourceLocations("classpath:/static/");
        registry.addResourceHandler("/afr/**").addResourceLocations("classpath:/static/");
        registry.addResourceHandler("/bi/**").addResourceLocations("classpath:/static/");
        registry.addResourceHandler("/mapproxy/**").addResourceLocations("classpath:/static/");
        registry.addResourceHandler("/flashbridge/**").addResourceLocations("classpath:/static/");
    }

    @Bean
    public javax.faces.webapp.FacesServlet facesServlet() {
        return new javax.faces.webapp.FacesServlet();
    }

    @Bean
    public org.apache.myfaces.trinidad.webapp.TrinidadFilter trinidadFilter() {
        return new org.apache.myfaces.trinidad.webapp.TrinidadFilter();
    }

    @Bean
    public oracle.adf.model.servlet.ADFBindingFilter adfBindingFilter() {
        return new oracle.adf.model.servlet.ADFBindingFilter();
    }

    @Bean
    public oracle.adf.mbean.share.connection.ADFConnectionLifeCycleCallBack adfConnectionLifeCycleCallBack() {
        return new oracle.adf.mbean.share.connection.ADFConnectionLifeCycleCallBack();
    }

    @Bean
    public oracle.adf.mbean.share.config.ADFConfigLifeCycleCallBack adfConfigLifeCycleCallBack() {
        return new oracle.adf.mbean.share.config.ADFConfigLifeCycleCallBack();
    }

    @Bean
    public oracle.bc4j.mbean.BC4JConfigLifeCycleCallBack bc4jConfigLifeCycleCallBack() {
        return new oracle.bc4j.mbean.BC4JConfigLifeCycleCallBack();
    }
}



